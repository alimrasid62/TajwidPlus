<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AyatActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/bg_app">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingRight="20sp"
        android:paddingLeft="20sp"
        android:background="@color/bg_cardview">

        <TextView
            android:id="@+id/tvAyatArabic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:paddingBottom="16dp"
            android:paddingLeft="20sp"
            android:paddingRight="20sp"
            style="@style/MyTextViewStyle"/>

        <TextView
            android:id="@+id/tvAyatTranslation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:paddingBottom="16dp"
            style="@style/MyTextViewStyle"/>

        <TextView
            android:id="@+id/tvAyatIndonesian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            style="@style/MyTextViewStyle"/>

        <TextView
            android:id="@+id/tvAyatTransliteration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            style="@style/MyTextViewStyle"/>

        <TextView
            android:id="@+id/tvTajwidExplanation"
            android:paddingTop="30sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            style="@style/MyTextViewStyle"/>

        <Button
            android:id="@+id/detectTajwidButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detect Tajwid"/>
    </LinearLayout>



</RelativeLayout>