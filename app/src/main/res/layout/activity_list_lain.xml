<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".materi.ListLainActivity"
    android:background="@color/bg_app"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarLain"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/bg_tollbar"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:textAlignment="center" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layoutLain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:tabTextColor="@color/bd_text"
        app:tabIndicatorAnimationMode="fade"
        android:backgroundTint="@color/bg_app"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pagerLain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>