<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SuratActivity"
    android:orientation="vertical"
    android:background="@color/bg_app">

    <TextView
        android:id="@+id/namaLatinTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="8dp"
        android:fontFamily="@font/tt_cocolates_trial_bold"
        android:textColor="@color/bd_text"/>

    <TextView
        android:id="@+id/artiTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:padding="8dp"
        android:fontFamily="@font/tt_cocolates_trial_demibold"
        android:textColor="@color/bd_text"/>

    <TextView
        android:id="@+id/deskripsiTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:padding="8dp"
        android:fontFamily="@font/tt_cocolates_trial_demibold"
        android:textColor="@color/bd_text"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp" />

</LinearLayout>