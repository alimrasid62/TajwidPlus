<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp"
        android:background="@color/bg_cardview">

        <TextView
            android:id="@+id/nomorTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingRight="10dp"
            android:gravity="center"
            android:textColor="@color/bd_text"
            android:fontFamily="@font/tt_cocolates_trial_demibold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/bg_cardview">

            <TextView
                android:id="@+id/tvJudul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/bd_text"
                android:layout_gravity="center"
                android:paddingBottom="15dp"/>
            <TextView
                android:id="@+id/tvArab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/bd_text"
                android:fontFamily="@font/tt_cocolates_trial_bold"/>
            <TextView
                android:id="@+id/tvLatin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:fontFamily="@font/tt_cocolates_trial_bold"
                android:textColor="@color/bd_text"/>
            <TextView
                android:id="@+id/tvTerjemah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/bd_text"/>
        </LinearLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>
